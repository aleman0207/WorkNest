<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/prueba" />

    <ImageView
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/logoworknestv5"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="355dp"
        android:fontFamily="@font/montserratextrabold"
        android:text="Work Nest"
        android:textColor="@color/prueba2"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/promptmedium"
        android:text="Conectados en un solo lugar"
        android:textColor="@color/prueba2"
        android:textSize="24sp"></TextView>

    <Button
        android:id="@+id/botonComenzar"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/navy"
        android:fontFamily="@font/promptmedium"
        android:text="Comenzar"
        android:textColor="@color/prueba2"
        android:textSize="20sp"></Button>

</FrameLayout>